<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_bar"
        android:layout_width="419dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        app:itemBackground="@drawable/selector"
        app:itemIconTint="@color/cardview_dark_background"
        app:itemTextColor="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="248dp"
        android:layout_height="139dp"
        app:srcCompat="@color/Brown"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="140dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Black"
        app:layout_constraintBottom_toTopOf="@+id/main_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_username"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="424dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_id"
        android:layout_width="107dp"
        android:layout_height="51dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toEndOf="@+id/add_username"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Brown"
        android:text="Connect"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="507dp" />


</androidx.constraintlayout.widget.ConstraintLayout>